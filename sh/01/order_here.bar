#!/usr/bin/env sh
#
#
set -u -e

PATH="$PATH:$HOME/progs/lemonbar-xft"

blue="#132492"
white="#ffffff"
red="#B60A0A"

exec lemonbar -p  \
  -f "Raleway:size=32:weight=bold:antialias=true" \
  -f "Raleway:size=42:weight=bold:antialias=true" \
  -f "Raleway:size=82:weight=bold:antialias=true" \
  -g "1016x200+0+180" \
  -B "$red" \
  -F "$white" \
  -n order_here_caption \
  $@
